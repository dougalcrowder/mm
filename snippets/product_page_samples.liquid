    {% endcomment %}
    
    {%- assign matchf2 = product.handle | append: '-freesample' -%}
    {% for sample in collections.free-fabric-samples.products %}
    {% if sample.handle == matchf2 %}
    
      <product-form class="product-form {{ sample.handle }}">
    
        {%- form 'product', product, id: product_form_id'-freesample', class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
