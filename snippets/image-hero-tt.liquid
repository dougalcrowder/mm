<picture class="heroshot">
  <source srcset="{{ landscape_image | img_url: '2560x1250', crop: 'center', format: 'pjpg' }}" media="(min-width: 2048px)" />
  
  <source srcset="{{ landscape_image | img_url: '2048x1000', crop: 'center', format: 'pjpg' }}" media="(min-width: 1680px)" />
  <source srcset="{{ landscape_image | img_url: '1680x820', crop: 'center', format: 'pjpg' }}" media="(min-width: 1440px)" />
  
  <source srcset="{{ landscape_image | img_url: '1440x703', crop: 'center', format: 'pjpg' }}" media="(min-width: 1200px)" />
  <source srcset="{{ landscape_image | img_url: '1200x586', crop: 'center', format: 'pjpg' }}" media="(min-width: 1024px)" />
  <source srcset="{{ landscape_image | img_url: '1024x500', crop: 'center', format: 'pjpg' }}" media="(min-width: 880px)" />
  
  <source srcset="{{ square_image | img_url: '880x880', crop: 'center', format: 'pjpg' }}" media="(min-width: 768px)" />
  <source srcset="{{ square_image | img_url: '768x768', crop: 'center', format: 'pjpg' }}" media="(min-width: 480px)" />
  <source srcset="{{ square_image | img_url: '480x480', crop: 'center', format: 'pjpg' }}" media="(min-width: 320px)" />
  <img{% unless forloop.index == 1 %} loading="lazy"{% endunless %} class="heroshot_image lazyimage" src="{{ square_image | img_url: '320x320' }}" alt="{{ square_image.alt | escape }}" />
</picture>