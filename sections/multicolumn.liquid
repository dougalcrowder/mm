<div class="multicolumn inner{% if section.settings.add_spacing %} padd_top{% endif %} pt-{{ section.settings.margin_top }} pb-{{ section.settings.margin_bot }}">
  {% if section.settings.border %}
  <div class="border">
  {% endif %}
    {%- if section.settings.show_title -%}
      <h3 class="h2 center">{{ section.settings.mc_title }}</h3>
    {%- endif -%}
    <ul class="multicolumn grid">
      {%- for block in section.blocks -%}
        {%- include 'multi-column' -%}
      {%- endfor -%}
    </ul>
  {% if section.settings.border %}
  </div>
  {% endif %}
</div>
 
{% schema %}

{
"name": "t:sections.multicolumn.name",
"class": "multicolumn-section",
"tag": "section",
"settings": [
   {
     "type": "text",
     "id": "mc_title",
     "label": "Title"
   },
   {
     "type": "checkbox",
     "id": "show_title",
     "default": false,
     "label": "Show the title"
   },
   {
      "type": "checkbox",
      "id": "add_spacing",
      "default": false,
      "label": "Add extra space above"
    },
    {
      "type": "checkbox",
      "id": "border",
      "default": false,
      "label": "Add a big border"
    },
    {
      "type": "select",
      "id": "margin_top",
