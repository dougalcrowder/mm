  
  {%- if section.settings.make_logo_white -%}
  <script>
    document.body.classList.add("white_logo");
  </script>
  {%- endif -%}
  {%- if section.settings.image != blank -%}
    {%- assign landscape_image = section.settings.image -%} 
    <script>
      document.body.classList.add("banner");
    </script>
  {%- if section.settings.mobile_image != blank -%}
    {%- assign square_image = section.settings.mobile_image -%}
  {%- else -%}
    {%- assign square_image = section.settings.image -%}
  {%- endif -%}
  {%- if section.settings.top_margin -%}
    <div class="margery">
      {% include 'image-hero' %}
    </div>
    {%- else -%}
    {% include 'image-hero' %}
  {%- endif -%}

  {%- endif -%}
  
  {% render 'inc_banner_text' %}
  
