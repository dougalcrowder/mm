{%- if collection.image -%}
{% assign needRed = collection.metafields.my_fields.make_logo_red %}
{%- if needRed -%}
{%- else -%}
<script>
  document.body.classList.add("white_logo");
</script>
{%- endif -%}

{%- assign image_alt = collection.title | append: ' Collection banner' -%}
{%- endif -%}

{% if collection.image %}
<div class="banner_head collection_banner_head">
  
  <div class="collection_header flex">
    <div class="text">
      <h1>{{ collection.title }}</h1>
      {%- if collection.description -%}
      <div class="rte" {{ block.shopify_attributes }}>
        <span>{{ collection.description }}</span>
      </div>
      {%- endif -%}
    </div>
  </div>
  
  <div class="collection_image">
    {% assign meta-mob_image = collection.metafields.my_fields.collection_mobile_image  %}
    {%- assign landscape_image = collection.image -%}
    
    {%- if meta-mob_image -%}
    {%- assign square_image = collection.metafields.my_fields.collection_mobile_image -%}
    {%- else -%}
    {%- assign square_image = collection.image -%}
    {%- endif -%}
    
    {% include 'image-hero-collection' %}

  </div>
</div>
{%- else -%}
<div class="naked_head-banner top">
  <div class="text">
    <h1>{{ collection.title }}</h1>
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "collections_banner ratio_banner",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle goes over image"
    }
  ]
}
{% endschema %}
